<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.lichvannien">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.OneDayActivity"
            android:launchMode="singleInstance"
            android:theme="@style/OnedayThemse"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetailLunarCalendarActivity"
            android:launchMode="singleInstance"
            android:theme="@style/DetaiLunarThemse"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.MonthActivity"
            android:launchMode="singleInstance"
            android:theme="@style/DetaiLunarThemse"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".activity.SelectDayActvity"
            android:launchMode="singleInstance"
            android:theme="@style/SelectDay"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>